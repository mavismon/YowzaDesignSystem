{
  "semantic": {
    "color": {
      "background": {
        "surface": { "$type": "color", "$value": "{color.base.100}" },
        "subtle": { "$type": "color", "$value": "{color.base.400}" },
        "inverse": { "$type": "color", "$value": "{color.secondary.600}" },
        "overlay": { "$type": "color", "$value": "{color.base.900}" },
        "disabled": { "$type": "color", "$value": "{color.neutral.600}" },
        "states": {
          "success": { "$type": "color", "$value": "{color.positive.100}" },
          "error": { "$type": "color", "$value": "{color.negative.100}" },
          "warning": { "$type": "color", "$value": "{color.warning.100}" },
          "info": { "$type": "color", "$value": "{color.info.100}" }
        }
      },
      "text": {
        "primary": { "$type": "color", "$value": "{color.secondary.600}" },
        "secondary": { "$type": "color", "$value": "{color.base.900}" },
        "inverse": { "$type": "color", "$value": "{color.neutral.100}" },
        "disabled": { "$type": "color", "$value": "{color.neutral.700}" },
        "states": {
          "success": { "$type": "color", "$value": "{color.positive.700}" },
          "error": { "$type": "color", "$value": "{color.negative.700}" },
          "warning": { "$type": "color", "$value": "{color.warning.800}" },
          "info": { "$type": "color", "$value": "{color.info.800}" }
        }
      },
      "icon": {
        "primary": { "$type": "color", "$value": "{color.primary.400}" },
        "secondary": { "$type": "color", "$value": "{color.secondary.400}" },
        "inverse": { "$type": "color", "$value": "{color.neutral.100}" },
        "disabled": { "$type": "color", "$value": "{color.base.900}" },
        "states": {
          "success": { "$type": "color", "$value": "{color.positive.400}" },
          "error": { "$type": "color", "$value": "{color.negative.400}" },
          "warning": { "$type": "color", "$value": "{color.warning.400}" },
          "info": { "$type": "color", "$value": "{color.info.400}" }
        }
      },
      "border": {
        "default": { "$type": "color", "$value": "{color.neutral.600}" },
        "strong": { "$type": "color", "$value": "{color.secondary.400}" },
        "disabled": { "$type": "color", "$value": "{color.neutral.500}" },
        "states": {
          "success": { "$type": "color", "$value": "{color.positive.400}" },
          "error": { "$type": "color", "$value": "{color.negative.400}" },
          "warning": { "$type": "color", "$value": "{color.warning.400}" },
          "info": { "$type": "color", "$value": "{color.info.400}" }
        }
      },
      "brand": {
        "primary": {
          "base": { "$type": "color", "$value": "{color.primary.500}" },
          "hover": { "$type": "color", "$value": "{color.primary.600}" },
          "active": { "$type": "color", "$value": "{color.primary.700}" }
        },
        "secondary": { "$type": "color", "$value": "{color.secondary.500}" },
        "accent": { "$type": "color", "$value": "{color.accent.400}" }
      }
    },

    "typography": {
      "display": {
        "$type": "typography",
        "$description": "Used for splash screens or major headlines. Bold and eye-catching.",
        "$value": {
          "fontFamily": "{fontFamily.display}",
          "fontSize": "{fontSize.2xl}",
          "fontWeight": "{fontWeight.bold}",
          "letterSpacing": "0px",
          "lineHeight": "{lineHeight.2xl}",
          "textTransform": "none",
          "textDecoration": "none"
        }
      },
      "heading": {
        "$type": "typography",
        "$description": "Use for secondary headings that are slightly less prominent than the main title",
        "$value": {
          "fontFamily": "{fontFamily.heading}",
          "fontSize": "{fontSize.xl}",
          "fontWeight": "{fontWeight.bold}",
          "letterSpacing": "0%",
          "lineHeight": "{lineHeight.xl}",
          "textTransform": "none",
          "textDecoration": "none"
        }
      },
      "subheading": {
        "$type": "typography",
        "$description": "Secondary titles below headings. Adds quick context.",
        "$value": {
          "fontFamily": "{fontFamily.subheading}",
          "fontSize": "{fontSize.lg}",
          "fontWeight": "{fontWeight.medium}",
          "letterSpacing": "0%",
          "lineHeight": "{lineHeight.lg}",
          "textTransform": "none",
          "textDecoration": "none"
        }
      },
      "title": {
        "$type": "typography",
        "$description": "Used for card titles, modal headers, or key labels.",
        "$value": {
          "fontFamily": "{fontFamily.title}",
          "fontSize": "{fontSize.md}",
          "fontWeight": "{fontWeight.medium}",
          "letterSpacing": "0%",
          "lineHeight": "{lineHeight.md}",
          "textTransform": "none",
          "textDecoration": "none"
        }
      },
      "label": {
        "$type": "typography",
        "$description": "For buttons, form labels, and UI elements. Compact but strong.",
        "$value": {
          "fontFamily": "{fontFamily.label}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": "{fontWeight.medium}",
          "letterSpacing": "0%",
          "lineHeight": "{lineHeight.sm}",
          "textTransform": "none",
          "textDecoration": "none"
        }
      },
      "body": {
        "$type": "typography",
        "$description": "Default text style for content, descriptions, and messages.",
        "$value": {
          "fontFamily": "{fontFamily.body}",
          "fontSize": "{fontSize.md}",
          "fontWeight": "{fontWeight.regular}",
          "letterSpacing": "0%",
          "lineHeight": "{lineHeight.sm}",
          "textTransform": "none",
          "textDecoration": "none"
        }
      },
      "caption": {
        "$type": "typography",
        "$description": "For helper text, image captions, or secondary info.",
        "$value": {
          "fontFamily": "{fontFamily.caption}",
          "fontSize": "{fontSize.xs}",
          "fontWeight": "{fontWeight.medium}",
          "letterSpacing": "0%",
          "lineHeight": "{lineHeight.xs}",
          "textTransform": "none",
          "textDecoration": "none"
        }
      },
      "micro": {
        "$type": "typography",
        "$description": "Used for hints, timestamps, or legal fine print.",
        "$value": {
          "fontFamily": "{fontFamily.micro}",
          "fontSize": "{fontSize.2xs}",
          "fontWeight": "{fontWeight.light}",
          "letterSpacing": "0%",
          "lineHeight": "{lineHeight.xs}",
          "textTransform": "none",
          "textDecoration": "none"
        }
      }
    }
  }
}
